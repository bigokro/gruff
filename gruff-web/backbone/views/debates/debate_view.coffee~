Brandship.Views.Debates ||= {}

class Brandship.Views.Debates.DebateView extends Backbone.View
  template: JST["backbone/templates/debates/debate"]

  events:
    "click .destroy" : "destroy"

  tagName: "tr"

  destroy: () ->
    @model.destroy()
    this.remove()

    return false

  render: ->
    $(@el).html(@template(@model.toJSON() ))
    return this
