Brandship.Views.Debates ||= {}

class Brandship.Views.Debates.IndexView extends Backbone.View
  template: JST["backbone/templates/debates/index"]

  initialize: () ->
    @options.debates.bind('reset', @addAll)

  addAll: () =>
    @options.debates.each(@addOne)

  addOne: (debate) =>
    view = new Brandship.Views.Debates.DebateView({model : debate})
    @$("tbody").append(view.render().el)

  render: =>
    $(@el).html(@template(debates: @options.debates.toJSON() ))
    @addAll()

    return this
