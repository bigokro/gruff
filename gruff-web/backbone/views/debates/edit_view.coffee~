Brandship.Views.Debates ||= {}

class Brandship.Views.Debates.EditView extends Backbone.View
  template : JST["backbone/templates/debates/edit"]

  events :
    "submit #edit-debate" : "update"

  update : (e) ->
    e.preventDefault()
    e.stopPropagation()

    @model.save(null,
      success : (debate) =>
        @model = debate
        window.location.hash = "/#{@model.id}"
    )

  render : ->
    $(@el).html(@template(@model.toJSON() ))

    this.$("form").backboneLink(@model)

    return this
