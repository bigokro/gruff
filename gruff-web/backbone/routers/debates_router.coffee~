class Brandship.Routers.DebatesRouter extends Backbone.Router
  initialize: (options) ->
    @debates = new Brandship.Collections.DebatesCollection()
    @debates.reset options.debates

  routes:
    "/new"      : "newDebate"
    "/index"    : "index"
    "/:id/edit" : "edit"
    "/:id"      : "show"
    ".*"        : "index"

  newDebate: ->
    @view = new Brandship.Views.Debates.NewView(collection: @debates)
    $("#debates").html(@view.render().el)

  index: ->
    @view = new Brandship.Views.Debates.IndexView(debates: @debates)
    $("#debates").html(@view.render().el)

  show: (id) ->
    debate = @debates.get(id)

    @view = new Brandship.Views.Debates.ShowView(model: debate)
    $("#debates").html(@view.render().el)

  edit: (id) ->
    debate = @debates.get(id)

    @view = new Brandship.Views.Debates.EditView(model: debate)
    $("#debates").html(@view.render().el)
