#tagcloud
  h3 Tags

script(type="text/javascript")
  $.get('/rest/tags/counts?tags=!{tags}', function(data) {
    var tags = "";
    var total = 0;
    var count = 0;
    var avg = 0;
    for (key in data) {
      total += data[key];
      count += 1;
    }
    avg = total/count;
    for (key in data) {
      var cls = "medium";
      if (data[key] > (avg * 1.3)) {
        cls = "large";
      }
      if (data[key] < (avg * .7)) {
        cls = "small";
      }
      var link = '<a href="/tags/' + key + '" class="' + cls + '">' + key + '</a>';
      tags = tags + link + " ";
    }
    $('#tagcloud').append(tags);
  });