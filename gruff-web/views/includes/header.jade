#header
  div#logo
    a.site-name(href='/') Gruff
  ul#user
    if everyauth.loggedIn
      li.user You are logged in as #{user.login}
      li.logout
        a.logout(href='/logout') Logout
      li.my-debates
        a.my-debates(href='/my/debates') My debates
      li.new
        a(href="/debates/new") Start your own debate!
    else
      li.login
        a(href='/login') Login
      li.register
        a(href='/register') Register
      li.new
        a(href="/login") Log in to start your own debate!
