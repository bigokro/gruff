include mixins/search_form

#left
  mixin search_form
#main
    div.debates
      h2 Debates
      if results == null || typeof(results) == 'undefined' || results.length == 0
        p
          | Sorry, there was no content matching your search. Try creating some!
      - each debate in results
        div.debate
          div.date= debate.date
          div.type= debate.type
          div(class="title checked")
            a(href="/debates/"+debate.linkableId())= debate.bestTitleText()
          div.description= debate.bestDescriptionText()

