body
  font-family "Courier New",Courier,monospace
  font-size 1em
  text-align center
  text-stroke 1px rgba(255, 255, 255, 0.1)
  color #555
h1, h2, h3
  margin 0
  font-variant small-caps
  letter-spacing -1px
  color #343434
h1
  text-shadow 1px 2px 2px #ddd
  text-align center
  font-size 3em
h2
  font-size 2 em
  text-align center
h3
  font-size 1.4 em
h4.title, h4.title a
  font-size 1.25 em
  letter-spacing -1px
  font-weight bold
  color #A3181E
div
  text-align left
fieldset
  width 80%
label
  margin-top .5em
  display block
  font-weight bold
label em
  color #A3181E
  font-style normal
input[type =text]
  width 100%
input[type =button], input[type =submit]
  text-align center
  width 200px
input[type =radio]
  margin-left 20px
textarea
  width 100%
  height 90px
a.action
  display block
  margin-left  auto
  margin-right auto
  width 200px
  text-align center
a.vote
  text-decoration none
  font-size 1.6em
  padding 0px 0px 26px 33px
  background url(/images/unchecked.png) no-repeat 0px 0
a.vote:hover
  text-decoration none
  font-size 1.6em
  padding 0px 33px 26px 0px
  background url(/images/checked.png) no-repeat 0px 0
#top
  #logo
    a
      float left
      color #343434
      text-align center
      font-size 3em
      text-decoration none
      font-family 'Special Elite', 'Kranky',"Lucida Grande", "Lucida Sans Unicode", Verdana
  #title
    margin-left auto
    margin-right auto
  #user
    float right
    margin 0
#content
  clear both
#header
  width 100%
  text-align center
#main
  margin-left auto
  margin-right auto
  width 50%
  .debates
      .debate
        margin 20px
        border-style dashed
        border-bottom-style none
        border-width 2px
        border-color #A3181E
        background-color #DDD
        .date
            display none
        .type
            display none
        .title a
            color #A3181E
            font-size 1.25em
            letter-spacing -1px
            font-weight bold
        .description
            font-family "Book Antiqua",Georgia,"MS Sans Serif", Geneva, sans-serif;
            padding .25em
            background-color #fff
            border none
#left
  width 20%
  float left
#right
  width 20%
  float right
  .references
    .reference
      h4.title, h4.title a
        font-size 0.75em
        color #A3181E
.comments
  margin-top 20px
  .comment
    margin-top 10px
    .user
      font-weight bold
      text-decoration underline
      background-color #eee
    .comment
      background-color #ffa
.debate
  .date
    display none
.description
    min-height 26px
    margin-top 10px
    margin-bottom 10px
    font-family "Book Antiqua",Georgia,"MS Sans Serif", Geneva, sans-serif;
    padding 5px
    background-color #fff
    border-style dashed
    border-top-style none
    border-width 2px
    border-color #A3181E
    background-color #DDD
    .vote-link
      float right
      text-align right
.descriptions
  .choose-description
      padding-bottom 10px
.error
  color #a33
.for
  border 1px solid
  padding 5px
  float left
  width 48%
  text-align right
  div.argument
    text-align right
.against
  border 1px solid
  padding 5px
  float right
  width 48%
.vote-link
  margin-left 15px
.titles
  margin-top 20px
  .choose-title
    margin-top 10px
    .user
      font-weight bold
      text-decoration underline
      background-color #eee
.answers
  margin-top 20px
  .answer
    margin-top 10px
    .answer
      font-weight bold
      text-decoration underline
      background-color #eee
.tags
  span.tag
    margin 2px 5px 2px 2px
    background-color  #ff9
  span.spacer
    margin-right 12px
  a.tag
    font-size .75em
    background-color #ff9
    text-decoration none
    padding 2px 4px 2px 4px
  a.tag:hover
    text-decoration underline
  a.delete-tag
    text-decoration none
    font-size .75em
    color  #A3181E
    background-color  #ff9
  a.delete-tag:hover
    text-decoration none
    font-size .75em
    color  #A3181E
    background-color #ff9
  span.space-holder
    font-size .75em
    color  #fff
    background-color #fff
.bottomForm
  margin-top 20px
  clear both
.checked
  min-height 26px
  padding 5px 0px 0px 32px
  background url(/images/checked.png) no-repeat 6px 0
.unchecked
  min-height 26px
  padding 5px 0px 0px 32px
  background url(/images/unchecked.png) no-repeat 6px 0