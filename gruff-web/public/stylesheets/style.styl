
body
  font-family "Lucida Grande", "Lucida Sans Unicode", Verdana, Helvetica, Arial
  font-size 13px
  text-align center
  text-stroke 1px rgba(255, 255, 255, 0.1)
  color #555
h1, h2, h3
  margin 0
  font-variant small-caps
  letter-spacing -1px
  font-size 22px
  color #343434
h1
  text-shadow 1px 2px 2px #ddd
  text-align center
  font-size 48px
h2
  font-size 34px
  text-align center
.error
  color #a33
h4.title, h4.title a
  font-family "Courier New", Courier, monospace
  font-size 20px
  letter-spacing -1px
  font-weight bold
  color #A3181E
a.action
  display block
  margin-left  auto
  margin-right auto
  width 200px
  text-align center
div
  text-align left
fieldset
  width 80%
label
  margin-top .5em
  display block
  font-weight bold
label em
  color #A3181E
  font-style normal
input[type =text]
  width 100%
input[type =button], input[type =submit]
  text-align center
  width 200px
input[type =radio]
  margin-left 20px
textarea
  width 100%
  height 90px
#header
  width 100%
  text-align center
#main
  margin-left auto
  margin-right auto
  width 50%
  .debates
      .debate
        margin 20px
        border-style dashed
        border-bottom-style none
        border-width 2px
        border-color #A3181E
        background-color #DDD
        .date
            display none
        .type
            display none
        .title a
            font-family "Courier New", Courier, monospace
            color #A3181E
            font-size 20px
            letter-spacing -1px
            font-weight bold
        .description
            font-family "Book Antiqua",Georgia,"MS Sans Serif", Geneva, sans-serif;
            padding 5px
            background-color #fff
            border none
.debate
  .date
    display none
.description
    min-height 26px
    margin-top 10px
    margin-bottom 10px
    font-family "Book Antiqua",Georgia,"MS Sans Serif", Geneva, sans-serif;
    padding 5px
    background-color #fff
    border-style dashed
    border-top-style none
    border-width 2px
    border-color #A3181E
    background-color #DDD
    .vote-link
      float right
      text-align right
.vote-link
  margin-left 15px
.descriptions 
  .choose-description
      border-top-style dashed
      border-bottom-style none
      padding-bottom 10px
.for
  float left
  width 50%
.against
  float right
  width 50%
  text-align right
  div.argument
    text-align right
.comments
  margin-top 20px
  .comment
    margin-top 10px
    .user
      font-weight bold
      text-decoration underline
      background-color #eee
    .comment
      background-color #ffa
.titles
  margin-top 20px
  .choose-title
    margin-top 10px
    .user
      font-weight bold
      text-decoration underline
      background-color #eee
.answers
  margin-top 20px
  .answer
    margin-top 10px
    .answer
      font-weight bold
      text-decoration underline
      background-color #eee
.bottomForm
    margin-top 20px
.checked
  min-height 26px
  padding 5px 0px 0px 32px
  background url(/images/checked.png) no-repeat 6px 0
.unchecked
  min-height 26px
  padding 5px 0px 0px 32px
  background url(/images/unchecked.png) no-repeat 6px 0
#left
  width 20%
  float left
#right
  width 20%
  float right
  .references
    .reference
      h4.title, h4.title a
        font-size 12px
        color #A3181E


